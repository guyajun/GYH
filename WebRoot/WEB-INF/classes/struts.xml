<!DOCTYPE struts PUBLIC
     "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
     "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="utf-8" />
	<constant name="struts.multipart.maxSize" value="104758600" />
	<include file="struts-default.xml" />

	<package name="stream" namespace="/stream" extends="struts-default">
		<action name="stream" class="org.shu.construct.action.StreamAction"
			method="getStream">
			<result name="success" type="stream">
				<param name="inputName">fileStream</param>
			</result>
		</action>
	</package>
	<package name="system" namespace="/system" extends="struts-default">
		<action name="usermanage" class="org.shu.admin.action.UserAction"
			method="getAll">
			<result name="success">/Web/admin-manage/usermanage.jsp</result>
			<result name="input">/Web/admin-manage/usermanage.jsp</result>
		</action>
		<action name="getByname" class="org.shu.admin.action.UserAction"
			method="getByname">
			<result name="success">/Web/admin-manage/usermanage.jsp</result>
			<result name="input">/Web/admin-manage/usermanage.jsp</result>
		</action>
		<action name="adduser" class="org.shu.admin.action.UserAction"
			method="addUser">
			<result type="redirectAction">usermanage</result>
		</action>
	</package>
	<package name="product" namespace="/product" extends="json-default">
		<action name="addBig" class="org.shu.construct.action.ProductAction"
			method="addBig">
			<result name="success">/product/product.jsp</result>
		</action>
		<action name="addSmall" class="org.shu.construct.action.ProductAction"
			method="addSmall">
			<result name="success">/product/product.jsp</result>
		</action>
		<action name="getAll" class="org.shu.construct.action.ProductAction"
			method="getAll">
			<result name="success">/product/product.jsp</result>
		</action>
	</package>
</struts>

